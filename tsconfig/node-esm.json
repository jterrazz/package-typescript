{
  "display": "ESM",
  "include": ["./src/"],

  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "ESNext",
    "types": ["node", "jest"],
    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },

  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
