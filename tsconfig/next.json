{
  "display": "Next JS",
  "include": [
    "../../../../src/**/*.ts",
    "../../../../src/**/*.tsx",
    "../../../../next-env.d.ts",
    "../../../../.next/types/**/*.ts"
  ],

  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
